<FrameLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/TF_location"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1.01"
                android:background="@color/white"
                android:ems="10"
                android:inputType="text"
                android:layout_margin="3dp"/>

            <Button
                android:id="@+id/B_buscar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/darker_blue"
                android:backgroundTint="@color/dark_golden"
                android:onClick="onClick"
                android:text="Buscar"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B_hoteles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darker_blue"
                android:backgroundTint="@color/dark_golden"
                android:onClick="onClick"
                android:text="Hoteles"
                android:layout_margin="3dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/B_tiendas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darker_blue"
                android:backgroundTint="@color/dark_golden"
                android:onClick="onClick"
                android:text="Tiendas"
                android:layout_margin="3dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/B_restaurantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darker_blue"
                android:backgroundTint="@color/dark_golden"
                android:onClick="onClick"
                android:text="Restaurantes"
                android:layout_margin="3dp"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/B_mas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darker_blue"
                android:backgroundTint="@color/dark_golden"
                android:onClick="onClick"
                android:text="MÃ¡s"
                android:layout_margin="3dp"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>